<?xml version="1.0" encoding="UTF-8"?>

<configuration>
<system.webServer>
<handlers>
<add name="httpPlatformHandler" path="" verb="" modules="httpPlatformHandler" resourceType="Unspecified" />
</handlers>
<!--
HttpPlatformHandler settings:
- processPath: ABSOLUTE path to the python.exe inside your project's venv.
- arguments: The name of your main Flask file (e.g., app.py).
- stdoutLogEnabled: Set to "true" during debugging to see print statements and errors.
- stdoutLogFile: Path to the log file. ".&quot; means the project root.
- startupTimeLimit: Time in seconds IIS waits for the app to start. ML apps can be slow to load, so this is increased.
-->
<httpPlatform processPath="C:\inetpub\wwwroot\face-recognition-api\venv\Scripts\python.exe"
arguments="app.py"
stdoutLogEnabled="true"
stdoutLogFile=".\python_logs.log"
startupTimeLimit="120">
<environmentVariables>
<!--
PYTHONPATH: ABSOLUTE path to your project's root folder.
This helps Python find your modules (like face_processor.py).
-->
<environmentVariable name="PYTHONPATH" value="C:\inetpub\wwwroot\face-recognition-api" />
</environmentVariables>
</httpPlatform>
</system.webServer>
</configuration>